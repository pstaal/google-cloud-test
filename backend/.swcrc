{
    "sourceMaps": true,
    "module": {
      "type": "commonjs",
      "noInterop": false
    },
    "exclude":["src/scripts/templates/*"],
    "jsc": {
      "target": "es2021",
      "parser": {
        "syntax": "typescript",
        "decorators": true
      },
      "transform": {
        "legacyDecorator": true,
        "decoratorMetadata": true
      },
      "keepClassNames": true
    }
  }